<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.example.dns.project_3.ui.activity.AuthorizationActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:hint="@string/pass_value"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/auth_margin"
        android:width="200dp"
        android:inputType="phone"
        android:gravity="center"
        android:textSize="30sp"
        android:maxLength="4"
        android:padding="@dimen/min_paddin"/>

    <Button
        android:id="@+id/code_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_button"
        android:width="120dp"
        android:background="@drawable/button"/>

</LinearLayout>
